<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_bg"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_65sdp"
            android:src="@drawable/ic_beans"
            android:layout_height="@dimen/_65sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvMainHeading"
            android:layout_marginTop="@dimen/_35sdp"
            android:textSize="@dimen/_34sdp"
            android:textColor="@color/code_browndark_three"
            android:text="@string/app_name_"
            android:fontFamily="@font/solway_bold"

            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/code_browndark_three"
        android:text="@string/github_redeyesncode"
        android:fontFamily="@font/solway_bold"

        android:layout_height="wrap_content"/>


</RelativeLayout>